<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px">

        <RelativeLayout
            android:id="@+id/item_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px">

            <FrameLayout
                android:layout_width="230px"
                android:layout_height="152px">
                <ImageView
                    android:id="@+id/courseImgView"
                    android:layout_width="230px"
                    android:layout_height="152px"
                    android:background="@drawable/item_studyhome_img"/>
                <Button
                    android:id="@+id/noSelect_Img"
                    android:layout_width="230px"
                    android:layout_height="152px"
                    android:background="#80000000"
                    android:textColor="@color/input_bg_color"
                    android:visibility="gone" />
                <Button
                    android:id="@+id/lockImg"
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:background="@drawable/lock_bg"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/giveFlag_Img"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_gravity="left"
                    android:src="@drawable/icon_give" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@+id/item_img_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:id="@+id/title_Item_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="16px"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/banner_title_color"
                    android:textSize="28px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_Item_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="28px"
                    android:text="2017-5-5"
                    android:textColor="@color/time_during"
                    android:textSize="24px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="28px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/type_Item_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/register_txt_color"
                        android:textSize="22px" />

                    <TextView
                        android:id="@+id/hint_Item_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30px"
                        android:textColor="@color/error_hint_txt_color"
                        android:textSize="22px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/item_content_layout"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="29px"
        android:background="#DDDDDD" />
</RelativeLayout>