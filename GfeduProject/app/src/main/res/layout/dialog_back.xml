<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backDialog_layout"
    style="@style/backDialog"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#ececec"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/txtdialog_layout_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="确定要退出练习？"
            android:textColor="#333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_layout_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtdialog_layout_back">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/shot_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btndialog_layout_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/dialog_layout_back" >

        <ImageView
            android:id="@+id/line_submit_img_back"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shot_line" />

        <Button
            android:id="@+id/miss_button_back"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/line_submit_img_back"
            android:background="#ececec"
            android:text="取消"
            android:textColor="#dd5555"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sumbit_btn_back"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/line_submit_img_back"
            android:background="#ececec"
            android:text="确定"
            android:textColor="#dd5555"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>