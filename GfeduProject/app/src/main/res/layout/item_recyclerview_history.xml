<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/input_bg_color"
        android:layout_marginTop="18px">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/date_layout"
                    android:layout_width="140px"
                    android:layout_height="162px">

                    <TextView
                        android:id="@+id/date_Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32px"
                        android:layout_marginTop="36px"
                        android:textColor="@color/item_date_txt"
                        android:textStyle="bold"
                        android:textSize="32px"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/date_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/time_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="46px"
                            android:textColor="@color/banner_title_color"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/courseContent_Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30px"
                            android:maxEms="22"
                            android:singleLine="true"
                            android:textColor="@color/card_item_txt"
                            android:textSize="24px" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/attendenceFlag_img"
                android:layout_width="66px"
                android:layout_height="66px"
                android:layout_gravity="right"
                android:layout_marginRight="6px"
                android:layout_marginTop="6px"
                android:background="@drawable/icon_queqin" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>