<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/banner_color"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:id="@+id/title_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/banner_title_color"
            android:textSize="32px" />

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="70px"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/calender_Btn"
                android:layout_width="66px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@drawable/ic_calendar"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="20px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:background="@drawable/ic_back" />
            <TextView
                android:id="@+id/cancel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="@string/cancel_txt"
                android:textColor="@color/register_txt_color"
                android:visibility="gone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share_layout"
            style="@style/common_set"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <Button
                android:id="@+id/search_Btn"
                android:layout_width="36px"
                android:layout_height="40px"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@drawable/icon_search"
                android:visibility="gone" />

            <Button
                android:id="@+id/moreBtn"
                android:layout_width="32px"
                android:layout_height="8px"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@drawable/icon_more"
                android:visibility="gone" />

            <TextView
                android:id="@+id/register_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:text="@string/register_txt"
                android:textColor="@color/register_txt_color" />
        </RelativeLayout>

        <Button
            android:id="@+id/noteMore_Btn"
            android:layout_width="36px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_toLeftOf="@+id/share_layout"
            android:background="@drawable/icon_note_search"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
