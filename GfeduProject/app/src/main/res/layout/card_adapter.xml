<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="580px"
    android:layout_height="720px"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    android:background="@color/input_bg_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/flagCard_Img"
            android:layout_width="94px"
            android:layout_height="94px"
            android:layout_gravity="right"
            android:background="@drawable/icon_nostart" />

        <RelativeLayout
            android:id="@+id/titleCard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/courseType_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/courseType_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="40px"
                    android:textColor="@color/banner_title_color"
                    android:textSize="36px"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/courseDru_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courseType_layout"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/courseDru_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="28px"
                    android:textColor="@color/banner_title_color"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/courseDay_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/courseDru_Txt"
                    android:textColor="#575757"
                    android:textSize="24px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/typeCard_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/courseDru_layout"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/icon_typeCard"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="28px"
                    android:background="@drawable/icon_typecard_zb" />

                <TextView
                    android:id="@+id/typeCard_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@+id/icon_typeCard"
                    android:textColor="@color/register_txt_color"
                    android:textSize="24px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeCard_layout">

                <ImageView
                    android:id="@+id/line_CardView"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="26px"
                    android:background="#dddddd" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/formCourse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_layout"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="45px">

                <ImageView
                    android:id="@+id/icon_form_Imag"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_normal" />

                <TextView
                    android:id="@+id/icon_form_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22px"
                    android:layout_toRightOf="@+id/icon_form_Imag"
                    android:text="@string/form_txt"
                    android:textColor="@color/card_item_txt"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/goClickableFrom_Img"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_go_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="23px"
                    android:layout_toLeftOf="@+id/goClickableFrom_Img"
                    android:layout_toRightOf="@+id/icon_form_Txt"
                    android:background="@drawable/line_div" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/questionCourse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/formCourse_layout"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="45px">

                <ImageView
                    android:id="@+id/icon_ques_Imag"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_question_normal" />

                <TextView
                    android:id="@+id/icon_ques_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22px"
                    android:layout_toRightOf="@+id/icon_ques_Imag"
                    android:text="@string/question_txt"
                    android:textColor="@color/card_item_txt"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/goClickableQues_Img"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_go_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="23px"
                    android:layout_toLeftOf="@+id/goClickableQues_Img"
                    android:layout_toRightOf="@+id/icon_ques_Txt"
                    android:background="@drawable/line_div" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noteCourse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/questionCourse_layout"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="45px">

                <ImageView
                    android:id="@+id/icon_note_Imag"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_note_normal" />

                <TextView
                    android:id="@+id/icon_note_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22px"
                    android:layout_toRightOf="@+id/icon_note_Imag"
                    android:text="@string/note_txt"
                    android:textColor="@color/card_item_txt"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/goClickableNote_Img"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_go_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="23px"
                    android:layout_toLeftOf="@+id/goClickableNote_Img"
                    android:layout_toRightOf="@+id/icon_note_Txt"
                    android:background="@drawable/line_div" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/materialCourse_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noteCourse_layout"
                android:layout_marginLeft="54px"
                android:layout_marginRight="54px"
                android:layout_marginTop="45px">

                <ImageView
                    android:id="@+id/icon_material_Imag"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_material_normal" />

                <TextView
                    android:id="@+id/icon_material_Txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22px"
                    android:layout_toRightOf="@+id/icon_material_Imag"
                    android:text="@string/material_txt"
                    android:textColor="@color/card_item_txt"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/goClickableMat_Img"
                    android:layout_width="52px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_go_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="2px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23px"
                    android:layout_marginRight="23px"
                    android:layout_toLeftOf="@+id/goClickableMat_Img"
                    android:layout_toRightOf="@+id/icon_material_Txt"
                    android:background="@drawable/line_div" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
